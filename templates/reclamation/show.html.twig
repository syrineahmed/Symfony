{% extends 'admin/base.html.twig' %}

{% block title %}Reclamation Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Reclamation Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">IdRec</th>
                        <td>{{ reclamation.idRec }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Sujet</th>
                        <td>{{ reclamation.sujet }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ reclamation.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ reclamation.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Etat</th>
                        <td>{{ reclamation.etat }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-inverse-success btn-fw">Back to List</a>
                    <a href="{{ path('app_reclamation_edit', {'idRec': reclamation.idRec}) }}" class="btn btn-inverse-warning btn-fw">Edit</a>
                </div>

                <div class="mt-3">
                    {{ include('reclamation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
