{% extends 'base-bak.html.twig' %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('reglee.css') }}">
    <!DOCTYPE html>
    <html>
    <head>

        <title >Service Details</title>
    </head>
    <body>



    {% if service %}
    <div class="table-container">
        <table border="2">
            <tr>
                <th class="entete">Id_Categorie</th>
                <th class="entete">Nom_Service</th>
                <th class="entete">Description</th>
                <th class="entete">Tarification</th>
                <th class="entete">Ref_service</th>
                <th class="entete">Disponibilité</th>
                <th class="entete">Date</th>
                <th class="entete">Edit</th>
                <th class="entete">Delte</th>




            </tr>
            <tr>
                <td>{{ service.getId }}</td>
                <td>{{ service.getNomcategorie }}</td>
                <td> {{ service.getDescription }}</td>
                <td>{{ service.getTarification }}</td>
                <td>{{ service.getRefService}}</td>
                <td>{{ service.getDisponibilite}}</td>
                <td>{{ service.getDate|date('Y-m-d')}}</td>
                <td><a href="{{ path('edit_service', {'id': service.id}) }}" style="display: inline-block; padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: 400; line-height: 1.42857143; text-align: center; white-space: nowrap; vertical-align: middle; cursor: pointer; border: 1px solid transparent; border-radius: 4px; color: #fff; background-color: #337ab7; border-color: #2e6da4;">Edit</a>
                <td><a href="{{ path('delete_service', {'id': service.id}) }}" style="display: inline-block; padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: 400; line-height: 1.42857143; text-align: center; white-space: nowrap; vertical-align: middle; cursor: pointer; border: 1px solid transparent; border-radius: 4px; color: #fff; background-color: red; border-color: #2e6da4;">Delete</a>



            </tr>
        </table>
        <a href="{{ path('service_db') }}" style="display: inline-block; padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: 400; line-height: 1.42857143; text-align: center; white-space: nowrap; vertical-align: middle; cursor: pointer; border: 1px solid transparent; border-radius: 4px; color: #fff; background-color: #337ab7; border-color: #2e6da4;">Return</a>

    {% else %}
        <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
            <div class="alert alert-danger" role="alert">
                <strong>Service non trouvé.</strong>
            </div>
        </div>
        </div>
    {% endif %}
    </body>
    </html>

{% endblock %}