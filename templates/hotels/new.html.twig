{% extends 'YassineTemp/back.html.twig' %}
{% block body %}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h1 class="mb-4">Create a New Hotel</h1>

            <form method="post" action="{{ path('app_hotels_new') }}" class="needs-validation" novalidate>
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_row(form.nomHotel, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'hôtel'}}) }}
                    {{ form_errors(form.nomHotel) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.nbEtoile, {'attr': {'class': 'form-control', 'placeholder': 'Nombre d\'étoiles'}}) }}
                    {{ form_errors(form.nbEtoile) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.pays, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
                    {{ form_errors(form.pays) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.nbChambre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de chambres'}}) }}
                    {{ form_errors(form.nbChambre) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.prixNuit, {'attr': {'class': 'form-control', 'placeholder': 'Prix par nuit'}}) }}
                    {{ form_errors(form.prixNuit) }}
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</button>
                    <a href="{{ path('app_hotels_index') }}" class="btn btn-secondary">Back to List</a>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>

{% endblock %}
