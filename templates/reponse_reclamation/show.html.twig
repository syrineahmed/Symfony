{% extends 'admin/base.html.twig' %}

{% block title %}Reponse Reclamation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">ReponseReclamation Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">IdReponse</th>
                        <td>{{ reponse_reclamation.idReponse }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Sujet</th>
                        <td>{{ reponse_reclamation.sujet }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Etat</th>
                        <td>{{ reponse_reclamation.etat }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td>{{ reponse_reclamation.date ? reponse_reclamation.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_reponse_reclamation_index') }}" class="btn btn-primary">Back to List</a>
                </div>

                <div class="mt-3">
                    {{ include('reponse_reclamation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
