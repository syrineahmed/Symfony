{% extends 'TempHamza/back.html.twig' %}

{% block body %}
                
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        
                        <div class="container mt-5">
        <h2 class="mb-4">UPDATE MEDECIN</h2>

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Nom</label>
    <div class="col-sm-10">
        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Prénom</label>
    <div class="col-sm-10">
        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Spécialité</label>
    <div class="col-sm-10">
        {{ form_row(form.specialite, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Pays</label>
    <div class="col-sm-10">
        {{ form_row(form.pays, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Date de Graduation</label>
    <div class="col-sm-10">
        {{ form_row(form.dategrad, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Numéro de Graduation</label>
    <div class="col-sm-10">
        {{ form_row(form.numbergrad, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Mot de passe</label>
    <div class="col-sm-10">
        {{ form_row(form.motdepasse, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
        {{ form_row(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
</div>

{{ form_end(form) }}
</div>
                    
{% endblock %}
       