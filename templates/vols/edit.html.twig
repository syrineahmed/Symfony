{% extends 'YassineTemp/back.html.twig' %}

{% block title %}Edit Vols{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Edit Vols</h1>

        <div class="card">
            <div class="card-body">
                {{ include('vols/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>

        <a href="{{ path('app_vols_index') }}" class="btn btn-secondary mt-3">Back to List</a>

        <div class="card mt-4">
            <div class="card-body">
                {{ include('vols/_delete_form.html.twig') }}
                {# Customized Delete Button #}
                <button type="submit" class="btn btn-danger mt-3" onclick="confirmDelete()">Delete Vols</button>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete() {
            if (confirm('Are you sure you want to delete this Vols?')) {
                document.getElementById('delete-form').submit();
            }
        }
    </script>
{% endblock %}
